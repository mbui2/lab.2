html {  
    height: 100%;
}

body {
    margin: 0;
    padding: 0;
    background-image: linear-gradient(to top right, #800000, #800080);
    background-repeat: no-repeat;
}
form { 
    margin: auto;
    position: absolute;
    top: 10%;
    left: 13%;
}
.box {
    position: relative;
    top: 50%;
    left: 50%;
    height: 200px;
	width: 205px;
    padding: 60px;
    background: #ffff;
    margin: 20%;
    border: double
    border-radius: 50px;
}


div{
    font-family:'Roboto', 'Open Sans', 'Arial';
}

p {
    text-align: center;
    font-size:40px!important;
}

.emailInput, .phoneInput {
    vertical-align: baseline;
    margin: 20px;
    padding: 5px;
}

#emailInput, #phoneInput {
    height: 30px;
    width: 200px;
}

.date {
    margin: 10px;
    padding: 5px;
}

#dateInput {
    height: 25px;
}

button {
    width: 100px; 
    height: 35px; 
    margin: 0 10px; 
    background: linear-gradient(to right, #859199, #2c3e50); 
    border: 0;
    outline: none; 
    cursor: pointer;
    border-radius: 50px;
}

.btn-1:hover {
    box-shadow: inset -10.5em 0 0 0
    #ff96ad, inset 10.5em 0 0 0 #ff96ad;
}

@media screen 
    and (max-width: 480px) {
        .container {
            margin: auto;
        }
    }